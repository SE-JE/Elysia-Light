{
  "name": "elysia-light",
  "version": "1.0.0",
  "scripts": {
    "dev"           :  "concurrently --raw \"bun run --watch app/app.ts\" \"bun barrels\" \"bun start:cron\" \"bun start:queue\" \"bun start:socket\"",
    "start"         :  "bun run app/app.ts",
    "start:cron"    :  "bun run app/jobs/crons/worker.cron.ts",
    "start:queue"   :  "bun run app/jobs/queues/worker.queue.ts",
    "start:socket"  :  "bun run app/jobs/sockets/worker.socket.ts",
    "test"          :  "bun tsc --noEmit",
    "lint"          :  "bunx eslint app/* utils/* database/*",
    "barrels"       :  "bun run utils/commands/barrels.ts",
    "light"         :  "bun utils/commands/light.ts"
  },
  "dependencies": {
    "@clickhouse/client": "^1.13.0",
    "bcrypt": "^6.0.0",
    "dotenv": "^17.2.2",
    "elysia": "latest",
    "ioredis": "^5.8.0",
    "knex": "^3.1.0",
    "pg": "^8.16.3",
    "nodemailer": "^7.0.9",
    "socket.io": "^4.8.1",
    "tsconfig-paths": "^4.2.0",
    "validator": "^13.15.15"
  },
  "devDependencies": {
    "eslint": "^10.0.0",
    "eslint-config-prettier": "^10.1.8",
    "@eslint/eslintrc": "eslint/eslintrc",
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.55.0",
    "@types/bcrypt": "^6.0.0",
    "@types/nodemailer": "^7.0.2",
    "@types/validator": "^13.15.3",
    "bun-types": "latest",
    "barrelsby": "^2.8.1",
    "concurrently": "^9.2.1"
  }
}
